<%= javascript_pack_tag "layout_usuario" %> 
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<%= stylesheet_link_tag 'usuario' %>
<div id="minimize" >
</div>
<div id="nav_user" style="position: -webkit-sticky;position: sticky;top: 0px;z-index: 1054;">
    <div id="mySidenav-left" class="sidenav" style="z-index: 1000;"> 
        <a id="closebtn"><i class="fas fa-times"></i></a>
        <div class="nav-menu w3-animate-right" >
            <h3 class="conta" style="font-family: 'Poppins'!important">Conta</h3>
            <div class="line-style-top"></div>
            <div class="dados-cliente">  
                <% if current_user.avatar.attached? %>
                    <%= image_pack_tag(current_user.avatar_thumbnail, style: 'width: 50px;height: 50px;margin-top: -2%;margin-left: 0%;border: 1px solid #082c54c7;border-radius: 50px;' )%> 
                <% else %>
                    <%= image_pack_tag('default.png', style: 'width: 50px;height: 50px;margin-top: -2%;margin-left: 0%;border: 1px solid #082c54c7;border-radius: 50px;' )%>
                <% end %>
                <div class="nome" ><%= first_name current_user.nome%></div>  
                <div class="descricao" ><b>CPF</b> <%= current_user.cpf%>  
