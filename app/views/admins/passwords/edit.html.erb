<div class="container background_principal">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "Nova Senha" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres no m√≠nimo)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" , class:"form-control" %>
    </div>
    <br>
    <div class="mb-3">
			<label class="form-label" style="">Confirmar Senha</label><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control" %>
    </div>  

    <div class="actions">
      <%= f.submit "Alterar Senha",class:"btn btn-primary", id:'login' %> 
    </div>
  <% end %>
  <%= render "admins/shared/links" %> 
</div>
