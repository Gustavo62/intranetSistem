<div class="container" style="margin-bottom: 104px;">   
  <div class="page-header">
    <h1 style="border-bottom: 1px solid #f8f9fa;margin-top: 3%;">Cobrança</h1>      
  </div>
  <p>Visualizar Cobrança Nº <b><%= @relatorio.id%></b>.</p>  
  <ul class="nav nav-tabs" style="margin-bottom: 11px;">
    <li class="nav-item">
      <a class="nav-link active" id="btn_menu_1" type="button" >Detalhes da cobrança</a>
    </li> 
    <div style="margin-left: auto;">
      <%= link_to 'Voltar',intranet_contribuicao_importadas_relatorio_index_path,class:"btn btn-link" %>  
    </div> 
  </ul> 
  <div class="form-group row" style="display:flex">
    <div style="width:100%">
      <label  class="col-sm-2 col-form-label" >Link ref.</label>
      <div class="col-sm-10 correct-md-10" >
        <input type="text" readonly class="form-control-plaintext input-show"  value="<%= @relatorio.url_link %>">
      </div>
    </div>
  </div> 
  <div class="form-group row" style="display:flex"> 
    <div style="width:49.5%;margin-right:auto">
      <label  class="col-sm-2 col-form-label" >Data</label>
      <div class="col-sm-10 correct-md-10" >
        <input type="text" readonly class="form-control-plaintext input-show"  value="<%= @relatorio.try(:data).strftime("%d/%m/%Y") if @relatorio.try(:data)%>">
      </div>
    </div>
    <div style="width:49.5%;margin-left:auto">
      <label  class="col-sm-2 col-form-label" >Status</label>
      <div class="col-sm-10 correct-md-10" >
        <input type="text" readonly class="form-control-plaintext input-show" id="valor" value="<%= @relatorio.status %>">
      </div>
    </div>
  </div>
  <br>
  <hr>
  <div class="form-group row" style="display:flex">
    <div style="width:100%">
      <label  class="col-sm-2 col-form-label" >Erro</label>
      <div class="col-sm-10 correct-md-10" >
        <input type="text" readonly class="form-control-plaintext input-show"  value="<%= @relatorio.errors_logs %>">
      </div>
    </div>
  </div> 
</div> 
 
<style>
  .input-show{
    background: #f8f9fa;
    border-radius: 2px;
    border: 1px solid #ededed;
    padding-left: 12px;
  }
  
  .correct-md-10{
    max-width: 100%;
    width: 100%;
  }
  .col-sm-2{
    max-width: 100%;
    width: 100%;
  } 	
</style> 