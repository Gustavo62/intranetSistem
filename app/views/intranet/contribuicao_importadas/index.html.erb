<%= javascript_pack_tag "boletos_index", "data-turbolinks-track" => true  %> 
<div class="container" style="margin-bottom: 200px;">  
  <div class="page-header">
    <h1 style="border-bottom: 1px solid #f8f9fa;margin-top: 3%;">Cobranças importadas</h1>      
  </div>
  <p>Gerenciar cobranças do sistema, ultima atualização <b><%= @data_ultima_atualização.strftime('%d/%m/%Y') %></b>.</p>  
  <%= form_with(url:'/intranet/contribuicao_importadas',method: :get, id:"form_assoc")  do |f| %>  
    <%= f.select "intranet_cartorio_id",options_from_collection_for_select(@cartorios, "id", "nome",params[:intranet_cartorio_id]), {:prompt => "Escolha o cartório"},{style:"margin-right:1%;",class:"form-control"}%> 
    <%= f.date_field "ano",type:"month",class:"form-control", value:params[:ano]%>
    <%= f.submit("Pesquisar", style:"margin-left: 10px;",class:"btn btn-primary") %>
    <%= link_to "Limpar", intranet_contribuicao_importadas_path , style:"width: 21%;",class:"btn btn-link" %>
  <% end %> 
  <div style="width: 100%;height: 572px;overflow-y: scroll;" class="table-wrapper-scroll-y my-custom-scrollbar shadow p-3 mb-5 bg-white rounded">
    <div class="collapse multi-collapse show" id="multiCollapseExample">  
      <table  class="table table-hover table-striped mb-0" style="overflow-x: auto;">
        <thead>
          <tr> 
            <th style="width: 5%;">#</th>
            <th style="width: 20%;">Cod. CNS</th>
            <th style="width: 20%;">Cod. TJ</th> 
            <th style="width: 20%;">Valor</th> 
            <th style="width: 10%;">Data Ref.</th> 
            <th style="text-align: center;width: 8%;" colspan="1">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @intranet_contribuicao_importadas.each do |intranet_contribuicao_importada| %>
            <tr> 
              <td><%= intranet_contribuicao_importada.id %></td>
              <td><%= @cartorios.find(intranet_contribuicao_importada.intranet_cartorio_id).try(:cod_cns) %></td>
              <td><%= @cartorios.find(intranet_contribuicao_importada.intranet_cartorio_id).try(:cod_tj) %></td> 
              <td><%= "R$ #{intranet_contribuicao_importada.valor.round(2)}" %></td> 
              <td><%= intranet_contribuicao_importada.ano.strftime("%d/%m/%Y") %></td>  
              <td style="text-align: center;">
                <%= link_to intranet_contribuicao_importada, class:"btni" do %>
                  <i class="fas fa-eye" style="padding:0px;"></i>
                <% end %>
              </td> 
            </tr>
          <% end %>
        </tbody>
      </table> 
    </div>  
  </div>
  <p style="text-align: center;padding: 1%;">Consulta obteve <%=  @intranet_contribuicao_importadas.size %> resultados.<p>   
  <br>
    <%= paginate @intranet_contribuicao_importadas%> 
  <br>
</div>  
<style>
  #form_assoc{
    display: flex;
    margin-bottom: 1%;
  } 
</style>