<div class="container"> 
	<div class="page-header">
		<h1 style="border-bottom: 1px solid #f8f9fa;margin-top: 3%;">Novos usuários</h1>      
	</div>  
    <p>Lista de novos usuários.</p>   
    <table class="table">
        <thead> 
            <tr>
                <th class="id">#</th> 
                <th class="nome">Nome</th>
                <th class="codtj">Data</th>
                <th class="acao">Interação</th>
            </tr>
        </thead>
        <tbody>  
            <% @associados.each do |associado|%>   
                <tr style="vertical-align: middle;">    
                    <th scope="row" class="id"><%= associado.user_id %></th>
                    <td class="nome"><%= associado.nome %></td> 
                    <td class="codtj"><%= associado.created_at.strftime("%d/%m/%Y") %></td>
                    <td class="acao">
                        <div class="btn-group">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Ação
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                <%= link_to intranet_lista_usuarios_deferir_path(:id => associado.user_id),  {:remote => true, 'data-bs-toggle' =>  "modal", 'data-bs-target' => '#modal-window', style:'text-decoration:none'}  do %>
                                    <span class="dropdown-item">Deferir</span>
                                <% end %> 

                                <%= link_to intranet_lista_usuarios_indeferir_path(:id => associado.user_id),  {:remote => true, 'data-bs-toggle' =>  "modal", 'data-bs-target' => '#modal-window', style:'text-decoration:none'}  do %>
                                    <span class="dropdown-item">Indeferir</span>
                                <% end %>  

                                <%= link_to intranet_lista_usuarios_visualizar_path(:id => associado.user_id),  {:remote => true, 'data-bs-toggle' =>  "modal", 'data-bs-target' => '#modal-window', style:'text-decoration:none'}  do %>
                                    <span class="dropdown-item">Visualizar</span>
                                <% end %>   
                            </div>
                        </div> 
                    </td> 
                </tr>   
            <% end %>  
        </tbody>
    </table>
        <br> 
    <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content"></div>
        </div>
    </div>  
</div>
    <style>
    .serv{
        float: left; 
    }
    .serv{
        float: right; 
    }
    .titulo{
        border-bottom: 1px solid #dee2e6;
        margin-top: 12px;
        margin-bottom: 23px;
    }
    .id{
        width: 10%;
    }
    .nome{
        width: 62%;
    }
    .codtj{
        text-align:center;
        width: 18%;
    }
    .acao{
        width: 10%;
    }
    </style>
