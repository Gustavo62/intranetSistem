<div class="container" style="margin-bottom: 7%;">
	<div class="page-header">
		<h1 style="border-bottom: 1px solid #f8f9fa;margin-top: 3%;">Visualizar Região</h1>      
	</div>
	<p>Visualização do região n°: <%= @intranet_regiao.id %>.</p> 
	<ul class="nav nav-tabs" style="margin-bottom: 11px;">
		<li class="nav-item">
			<a class="nav-link active" id="btn_menu_1" type="button" >Detalhes da região</a>
		</li> 
		<div style="margin-left: auto;">
			<%= link_to 'Voltar', :back,class:"btn btn-link" %> 
			<%= link_to 'Editar', edit_intranet_regiao_path(@intranet_regiao),class:"btn btn-primary" %> 
			<a  class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal<%= @intranet_regiao.id %>">Deletar</i></a>
		</div>
		<div class="modal fade" id="exampleModal<%= @intranet_regiao.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Deletar Região</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" ></button> 
				</div>
				<div class="modal-body">
					Deseja deletar região <%= @intranet_regiao.descricao %>.
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal" focus>cancelar</button> 
					<%= link_to intranet_regiao_path, method: :delete do %> 
						<button type="button" class="btn btn-danger">Excluir</button>
					<% end %>
				</div>
				</div>
			</div>
		</div>
	</ul>
	<div class="form-group row" style="display:flex">
		<div style="width:100%;margin-right: auto;">
			<label  class="col-sm-2 col-form-label" style="max-width: inherit;">
				Descrição 
				<span style="float: right;font-size: 13px;margin-top: 4px;">
					ativar região? 
					<%= check_box_tag 'Ativo','yes',@intranet_regiao.ativo, onclick:"return false;" %>
				</span>
			</label>
			<div class="col-sm-10 correct-md-10" >  
				<input placeholder="<%= @intranet_regiao.descricao %>" class='form-control' style="background: #f8f9fa;"><br />
			</div>
		</div> 
	</div>    
</div>     
<style> 
  .correct-md-10{
    max-width: 100%;
    width: 100%;
  }
  .col-sm-2{
    max-width: 100%;
    width: 100%;
  } 	
</style>