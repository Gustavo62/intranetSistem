
<div class="container" style="margin-bottom: 106px;">    
	<div class="page-header">
		<h1 style="border-bottom: 1px solid #f8f9fa;margin-top: 3%;">Avisos</h1>      
	</div> 
	<% if user_signed_in? == false %>
		<p>Gerenciar avisos do sistema.</p>    
		<%= form_with(url:'/intranet/avisos',method: :get, id:"form_assoc")  do |f| %> 
			<%= f.select "id_atividade",options_from_collection_for_select(@atividades, "id", "descricao",params[:id_atividade]), {:prompt => "Escolha a atividade"},{style:"margin-right:1%;"}%> 
			<%= select_tag(:status, options_for_select([["Ativo",true],["Desativado",false]],params[:status]), class:"form-control",id:"params_status",prompt:"Status do Boleto",style:"margin-right:1%;") %> 
			<%= f.submit("Pesquisar", style:"margin-left: 10px;",class:"btn btn-primary") %>
			<%= link_to "Limpar", intranet_avisos_path ,style:"width: 21%;",class:"btn btn-link" %>
		<% end %> 
	<% else %> 
		<p>Lista de avisos do sistema.</p>   
	<% end %> 
	<div style="width: 100%;height: 572px;overflow-y: scroll;" class="table-wrapper-scroll-y my-custom-scrollbar shadow p-3 mb-5 bg-white rounded">
		<table class="table table-hover table-striped mb-0" style="overflow-x: auto;">
			<thead>
			<tr>
				<th style="width:70%">Titulo</th>
				<th style="width:10%">Ativo</th>
				<th colspan="3" style="width:20%;text-align: center;">Ações</th>  
			</tr>
			</thead> 
			<tbody>
				<% @intranet_avisos.each do |intranet_aviso| %>
					<tr>
					<td><%= intranet_aviso.titulo %></td> 
					<td><%= check_box_tag 'Ativo','yes',intranet_aviso.ativo, onclick:"return false;",class: 'form-group',style:"width: 17px;height: 17px;" %></td>
					<% if user_signed_in?%> 
						<td style="text-align: center;">
						<%= link_to intranet_aviso, class:"btni" do %>
							<i class="fas fa-eye" style="padding:0px;"></i>
						<% end %>
						</td>
					<% else %> 
						<td style="text-align: center;">
						<%= link_to intranet_aviso, class:"btni" do %>
							<i class="fas fa-eye" style="padding:0px;"></i>
						<% end %>
						</td>
					<% end %>
					<% if user_signed_in? == false%> 
						<td style="text-align: center;">
						<%= link_to edit_intranet_aviso_path(intranet_aviso), class:"btni" do %>
							<i class="fas fa-edit" style="padding-left: 3px;"></i>
						<% end %>
						</td>
						
						<td style="text-align: center;"> 
							<a  class="btni" data-bs-toggle="modal" data-bs-target="#exampleModal<%= intranet_aviso.id %>"><i class="fas fa-trash-alt" style="padding:0px;"></i></a>
							
							<div class="modal fade" id="exampleModal<%= intranet_aviso.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
								<div class="modal-dialog" role="document">
									<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title" id="exampleModalLabel">Deletar Aviso</h5>
										<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" ></button>
									</div>
									<div class="modal-body">
										Deseja deletar aviso n°: <%= intranet_aviso.id %>
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-secondary" data-dismiss="modal" focus>cancelar</button> 
										<%= link_to intranet_aviso, method: :delete do %> 
											<button type="button" class="btn btn-danger">Excluir</button>
										<% end %>
									</div>
									</div>
								</div>
							</div>
						</td>
					<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<br>
	<% if user_signed_in? == false%> 
		<%= link_to new_intranet_aviso_path, class:"btn btn-primary",style:"float:right" do %> 
		<i style="margin-right: 9px;" class="fas fa-plus icon-aux-label"></i>Aviso
		<% end %>
	<% end %>
</div>
<style>
.btni{  font-size:16px
}
.titulo_page{
	background: #ffb68a;
margin-top: 0px;
height: 64px;
padding: 9px;
    padding-left: 9px;
padding-left: 16px;
border-bottom: 1px solid #d5a487;
color: #ff6000;
text-shadow: 1px 1px 2px #d5a487;
} 
#form_assoc{
	display: flex;
	margin-bottom: 1%;
} 
</style>
