<div class="container">    
	<div class="page-header">
		<h1 style="border-bottom: 1px solid #f8f9fa;margin-top: 3%;">Atividades</h1>      
	</div>
	<p>Gerenciar atividades do sistema.</p>    
	<%= form_with(url:'/intranet/atividades',method: :get, id:"form_assoc")  do |f| %>   
		<%= select_tag(:status, options_for_select([["Ativo",true],["Desativado",false]],params[:status]), class:"form-control",id:"params_status",prompt:"Status da atividade",style:"margin-right:1%;") %> 
		<%= f.submit("Pesquisar", style:"margin-left: 10px;",class:"btn btn-primary") %>
		<%= link_to "Limpar", intranet_atividades_path , style:"width: 21%;",class:"btn btn-link" %>
	<% end %> 
	<div style="width: 100%;height: 572px;overflow-y: scroll;" class="table-wrapper-scroll-y my-custom-scrollbar shadow p-3 mb-5 bg-white rounded">
		<table class="table table-hover table-striped mb-0" style="overflow-x: auto;">
			<thead>
			<tr>
				<th style="width:70%">Descrição</th>
				<th style="width:10%">Ativo</th>
				<th colspan="3" style="width:20%;text-align: center;">Ações</th>  
			</tr>
			</thead> 
			<tbody>
				<% @intranet_atividades.each do |intranet_atividade| %>
					<tr>
            <td><%= intranet_atividade.descricao %></td> 
            <td><%= check_box_tag 'Ativo','yes',intranet_atividade.ativo, onclick:"return false;",class: 'form-group',style:"width: 17px;height: 17px;" %></td> 
            <td style="text-align: center;">
              <%= link_to intranet_atividade, class:"btni" do %>
                <i class="fas fa-eye" style="padding:0px;"></i>
              <% end %>
            </td>  
            <td style="text-align: center;">
              <%= link_to edit_intranet_atividade_path(intranet_atividade), class:"btni" do %>
                <i class="fas fa-edit" style="padding-left: 3px;"></i>
              <% end %>
            </td>
              
            <td style="text-align: center;"> 
				<a  class="btni" data-bs-toggle="modal" data-bs-target="#exampleModal<%= intranet_atividade.id %>"><i class="fas fa-trash-alt" style="padding:0px;"></i></a>
				
				<div class="modal fade" id="exampleModal<%= intranet_atividade.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
					<div class="modal-dialog" role="document">
					<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Deletar Atividade</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" ></button>
					</div>
					<div class="modal-body">
						Deseja deletar Atividade <%= intranet_atividade.descricao %>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal" focus>cancelar</button> 
						<%= link_to intranet_atividade, method: :delete do %> 
						<button type="button" class="btn btn-danger">Excluir</button>
						<% end %>
					</div>
					</div>
					</div>
				</div>
            </td> 
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<br>
	<% if user_signed_in? == false%> 
		<%= link_to new_intranet_atividade_path,style:"float:right" do %>
		<button class="btn btn-primary">Atividade</button>
		<% end %>
	<% end %>
</div>
<style>
.btni{  font-size:16px
}
.titulo_page{
	background: #ffb68a;
margin-top: 0px;
height: 64px;
padding: 9px;
    padding-left: 9px;
padding-left: 16px;
border-bottom: 1px solid #d5a487;
color: #ff6000;
text-shadow: 1px 1px 2px #d5a487;
} 
#form_assoc{
	display: flex;
	margin-bottom: 1%;
} 
</style>
