<div class="container" style="margin-bottom: 7%;">
	<div class="page-header">
		<h1 style="border-bottom: 1px solid #f8f9fa;margin-top: 3%;">Visualizar Contribuição</h1>      
	</Div>
	<p>Visualização do contribuição n°: <%= @intranet_contribuicao.id %>.</p> 
	<ul class="nav nav-tabs" style="margin-bottom: 11px;">
		<li class="nav-item">
			<a class="nav-link active" id="btn_menu_1" type="button" >Detalhes da contribuição</a>
		</li> 
		<div style="margin-left: auto;">
			<%= link_to 'Voltar', :back,class:"btn btn-link" %> 
			<%= link_to 'Editar', edit_intranet_contribuicao_path(@intranet_contribuicao),class:"btn btn-primary" %> 
		</div>
	</ul>
	<div class="form-group row" style="display:flex">
		<div style="width:70%;margin-right: auto;">
			<label  class="col-sm-2 col-form-label" style="max-width: inherit;">
				Descrição
				<span style="float: right;font-size: 13px;margin-top: 4px;">
					ativar contribuicão? 
					<%= check_box_tag 'Ativo','yes',@intranet_contribuicao.ativo, onclick:"return false;" %>
				</span>
			</label>
			<div class="col-sm-10 correct-md-10" >  
				<input placeholder="<%= @intranet_contribuicao.descricao %>" class='form-control' style="background: #f8f9fa;"><br />
			</div>
		</div>  
		<div style="width:30%;margin-left: auto;">
			<label  class="col-sm-2 col-form-label" style="max-width: inherit;">
				Valor Base 
			</label>
			<div class="col-sm-10 correct-md-10" >  
				<input placeholder="<%= @intranet_contribuicao.valor_base %>" class='form-control' style="background: #f8f9fa;"><br />
			</div>
		</div> 
	</div>    
</div>     
<style> 
  .correct-md-10{
    max-width: 100%;
    width: 100%;
  }
  .col-sm-2{
    max-width: 100%;
    width: 100%;
  } 	
</style>